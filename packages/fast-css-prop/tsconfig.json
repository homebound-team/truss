{
  "extends": "@homebound/tsconfig/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "outDir": "build/",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./src"]
}
