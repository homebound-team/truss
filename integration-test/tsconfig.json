{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ESNext", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": "./",
    "types": ["jest", "node"],
    "typeRoots": ["./typings", "../node_modules/@types"],
    "jsx": "react"
  },
  "include": ["./"]
}
